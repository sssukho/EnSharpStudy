<UserControl x:Class="LoginProgram.FindPasswordControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LoginProgram"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="600">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="50" Height="400" Background="#ffffff">

            <StackPanel Orientation="Vertical" Margin="20" HorizontalAlignment="Center">
                <TextBlock Width="200" FontWeight="Bold" FontSize="20">PhoneNumber</TextBlock>
                <TextBox x:Name="inputPhone" Width="200" FontSize="18" BorderBrush="Black"></TextBox>
                <TextBlock Width="200" FontWeight="Bold" FontSize="20">Email</TextBlock>
                <TextBox x:Name="inputEmail" Width="200" FontSize="18" BorderBrush="Black"></TextBox>
            </StackPanel>
            
            <Button x:Name="Find" Click="FindClicked"  FontSize="20" Background="Green" FontWeight="Bold" Width="200" Margin="20">Find</Button>
            <Button x:Name="Back" Click="BackClicked" FontSize="20" FontWeight="Bold" Width="50" HorizontalAlignment="Right" Margin="30">Back</Button>
        </StackPanel>
    </Grid>
</UserControl>
