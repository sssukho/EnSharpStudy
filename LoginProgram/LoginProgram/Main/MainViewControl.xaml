<UserControl x:Class="LoginProgram.MainViewControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LoginProgram"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="600">
    <StackPanel x:Name="MainViewPanel" Orientation="Horizontal" VerticalAlignment="Center" Background="#ffff" Width="600">
        <Button x:Name="Logout" Click="LogoutClicked"  HorizontalAlignment="Left" Height="200" Width="160" Margin="20" FontSize="40" FontWeight="Bold" Background="#FE9A2E">Logout</Button>
        <Button x:Name="EditPersonalInfo" Click="EditInfoClicked" HorizontalAlignment="Center" Height="200" Width="160" Margin="20" FontSize="20" FontWeight="Bold" Background="#FE9A2E">EditPersonalInfo</Button>
        <Button x:Name="Withdraw" Click="WithdrawClicked" HorizontalAlignment="Right" Height="200" Width="160" Margin="20" FontSize="30" FontWeight="Bold" Background="#FE9A2E">Withdraw</Button>
    </StackPanel>
    
</UserControl>
